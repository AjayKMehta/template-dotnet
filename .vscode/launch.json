{
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Test project",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/artifacts/bin/${input:testProject}/${input:rememberConfig}/${input:testProject}.dll",
      "args": [],
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "inputs": [
    {
      "id": "rememberConfig",
      "type": "command",
      "command": "extension.commandvariable.remember",
      "args": {
        "key": "buildConfig"
      }
    },
    {
      "id": "testProject",
      "type": "command",
      "command": "extension.commandvariable.file.pickFile",
      "args": {
        "description": "Pick a test project.",
        "include": "**/tests/**/*.csproj",
        "acceptIfOneFile": true,
        "display": "transform",
        "keyRemember": "testProject",
        "valueTransform": {
          "text": "${fileBasename}",
          "apply": [
            {
              "find": "\\.csproj$",
              "replace": ""
            },
          ]
        }
      }
    }
  ]
}
